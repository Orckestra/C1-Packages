<?xml version="1.0" encoding="utf-8" ?>
<!-- To affect any changes in this configuration restart webapp -->
<settings 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="localhost Orckestra.Web.Typescript.dll.cmp.xsd">
  <typescriptTasks>
    <typescriptTask>
      <!-- Timeout in seconds to wait a compilation result, cannot be empty, zero or negative -->
      <compilerTimeOutSeconds>15</compilerTimeOutSeconds>
      <!-- Custom name of a task, to be used for loggs -->
      <taskName>default task</taskName>
      <!-- To overwrite files in case they exist-->
      <allowOverwrite>true</allowOverwrite>
      <!-- Pathes where typescripts located, to monitore for changes-->
      <pathsToWatchForChanges>
        <pathToWatchForChanges>~/UI.Package/Typescript</pathToWatchForChanges>
      </pathsToWatchForChanges>
      <!-- A mask for extentions to be watched for changes. If you need multiple, use | : *.ts|*.js.-->
      <fileMask>*.ts</fileMask>
      <!-- A path to tsconfig.json file, which includes all typescript compilation options.
      More about it here: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html -->
      <pathTypescriptConfigFile>~/tsconfig.json</pathTypescriptConfigFile>
      <!-- To turn on or to turn off minification of a compiled file. Set up outFile in tsconfig to use it-->
      <useMinification>true</useMinification>
      <!-- A filename of minified javascript.-->
      <minifiedFileName>orckestra.composer.min.js</minifiedFileName>
    </typescriptTask>
  </typescriptTasks>
</settings>